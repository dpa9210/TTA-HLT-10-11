#Guess the number
import random
print ("\n\t Hello and welcome to the Guess your number game \n\n")

myName = input("Enter your name: ")

print("\n\t Well", myName, "I am thinking of a number between 1 and 10\n")

guess = int(input("\n\nTake a guess: "))
number = random.randint(1,10)
while number < 6:
    
    if guess >= number:
        print("You are close", myName, "but the number you guessed is higher than my number which was", number, "try again!")
        number = random.randint(1,10)
        guess = int(input("\n\nTake another guess: "))
    elif guess <= number:
        print("You are close", myName, "but the number you guessed is lower than my number which was", number, "try again!")
        number = random.randint(1,10)
        guess = int(input("\n\nTake another guess: "))
    elif guess == number:
        print("Good job ", myName, " you were right, my number is", number)
        break
